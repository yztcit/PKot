<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PKot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/status_dark</item>
        <item name="colorPrimaryVariant">@color/status_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="DesignTranslucentActivity" parent="Theme.PKot">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>
    <style name="DesignToolbarTheme" parent="Theme.PKot">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="ToolbarMenuTheme" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="popupMenuBackground">@color/background_dark</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">-7dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/white</item>
    </style>
</resources>