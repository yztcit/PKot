<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/fragment_splash"
    android:id="@+id/nav_entry">

    <fragment
        android:id="@+id/fragment_splash"
        android:name="com.nttn.pkot.view.feature.SplashFragment"
        android:label="splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@id/activity_main"
            app:popUpTo="@id/fragment_splash"
            app:popUpToInclusive="true"
            app:launchSingleTop="true" />

    </fragment>

    <activity
        android:id="@+id/activity_main"
        android:name="com.nttn.pkot.MainActivity"
        android:label="main"
        tools:layout="@layout/activity_main" />
</navigation>